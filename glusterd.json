{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "glusterd",
        "labels": { "storage": "glusterfs" }
    },
    "spec": {
        "containers": [
            {
                "name": "glusterd",
                "image": "jhou/gluster",
                "securityContext": {
                    "privileged": true
                },
                "imagePullPolicy": "IfNotPresent"
            }
        ]
    }
}
