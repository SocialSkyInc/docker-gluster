    "kind": "PersistentVolumeClaim",
    "metadata": {
        "name": "pvc-glusterfs"
    },
    "spec": {
        "volumeName": "pv-glusterfs",
        "accessModes": [ "ReadWriteOnce" ],
        "resources": {
            "requests": {
                "storage": "5Gi"
            }
        }
    }
}
